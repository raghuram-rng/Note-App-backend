<h1>Login</h1>

<%= form_with(url: login_path, method: :post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control", placeholder: "Enter your username" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="form-group">
    <%= form.submit "Login", class: "btn btn-primary" %>
  </div>
<% end %>
